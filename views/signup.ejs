<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../src/components/head'); %>
    <title>Sign Up</title>
    <script defer src="../JS/signup.js"></script>
    <style>
      .login:hover{
        color: blue!important;
      }
    </style>
</head>

<body>
  <section class="vh-100" style="background-color: #eee">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px">
            <div class="card-body p-md-5">
              <div class="row ">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <div class="d-flex">
                    <a href="/login" class="login h3 text-dark mx-3 mt-4 text-decoration-none">
                      <i class="fa-solid fa-arrow-left py-3"></i>
                    </a>
                    <p class="text-center h1 fw-bold mx-1 mx-md-4 mt-4">
                      Sign up
                    </p>
                  </div>
                  <ul class="nav nav-tabs">
                    <li class="nav-item">
                      <button class="nav-link" onclick="toggleSignupForm('doctor')" id="doctor-tab">
                        Doctor
                      </button>
                    </li>
                    <li class="nav-item">
                      <button class="nav-link" onclick="toggleSignupForm('patient')" id="patient-tab">
                        Patient
                      </button>
                    </li>
                  </ul>
                  <div class="tab-content">
                    <div id="doctor" class="tab-pane fade show active" aria-labelledby="doctor-tab"
                      style="display: block">
                      <form id="doctorSignupForm" method="post" action="/doctor-signup">
                        <%- include('../src/components/signup_doctor')%>
                      </form>
                    </div>
                    <div id="patient" class="tab-pane fade show" aria-labellebdy="patient-tab" style="display: none">
                      <form id="patientSignupForm" method="post" action="/patient-signup">
                        <%- include('../src/components/signup_patient')%>
                      </form>
                    </div>
                  </div>

                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid" alt="Sample image" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
</body>

</html>